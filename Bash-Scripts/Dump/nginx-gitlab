server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name gitlab.virtualtanet.com;
	root /var/www/gitlab.virtualtanet.com/public;

	# SSL
	ssl_certificate /etc/letsencrypt/live/gitlab.virtualtanet.com/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/gitlab.virtualtanet.com/privkey.pem;
	ssl_trusted_certificate /etc/letsencrypt/live/gitlab.virtualtanet.com/chain.pem;

	# security
	include nginxconfig.io/security.conf;

	# reverse proxy
	location / {
		proxy_pass https://10.82.11.42:443;
		include nginxconfig.io/proxy.conf;
	}

	# additional config
	include nginxconfig.io/general.conf;
}

# HTTP redirect
server {
	listen 80;
	listen [::]:80;

	server_name gitlab.virtualtanet.com;

	include nginxconfig.io/letsencrypt.conf;

	location / {
		return 301 https://gitlab.virtualtanet.com$request_uri;
	}
}

sudo certbot certonly --webroot -d gitlab.virtualtanet.com --email info@gitlab.virtualtanet.com -w /var/www/_letsencrypt -n --agree-tos --force-renewal
